[flake8]
max-line-length = 88
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    .env,
    migrations,
    .mypy_cache,
    .pytest_cache,
    node_modules
ignore =
    E203,
    E501,
    W503,
    F401
per-file-ignores =
    __init__.py:F401
    */settings*.py:F405,F403
    */migrations/*.py:E501,F401,F811
